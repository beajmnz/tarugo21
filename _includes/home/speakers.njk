<section class="maincontent-speakers" id="speakers">
  <header>
    <h2>{{ content.title | md(true) | safe }}</h2>
  </header>

  {{ content.intro | md | safe }}

  <ul class="speakers-list">

    {% for speaker in content.speakers %}
    <li>
        <article class="speaker js-openDialog" style="--image: url('{{ speaker.data.image.src | url }}')">
            <h4 class="speaker-title">{{ speaker.name }}</h4>
            <p class="speaker-company">{{ speaker.company }}</p>
            <em class="speaker-position">{{ speaker.position }}</em>

            <address class="speaker-contact">
                {% for link in speaker.links %}
                  <a href="{{ link.url }}">
                    {{ link.type }}
                    {{ link.text }}
                  </a>
                {% endfor %}
            </address>
        </article>

        <div class="speaker-modal" id="dialog-{{ speaker.fileSlug }}">
            <button class="js-closeDialog speaker-modal-close">Cerrar</button>
            
            <div class="speaker-modal-content">
                <div class="speaker-photo">
                  <img src="{{ speaker.image }}">
                </div>

                <div class="speaker-modal-header">
                    <h4 class="speaker-title">{{ speaker.name }}</h4>
                    <p class="speaker-company">{{ speaker.company }}</p>
                    <em class="speaker-position">{{ speaker.position }}</em>
                </div>

                <address class="speaker-contact">
                    {% for link in speaker.links %}
                      <a href="{{ link.url }}">
                        {{ link.type }}
                        {{ link.text }}
                      </a>
                    {% endfor %}
                </address>

                <div class="speaker-bio">
                    {{ speaker.bio | md | safe }}
                </div>
            </div>
        </div>
      </li>
      {% endfor %}
    </ul>
</section>