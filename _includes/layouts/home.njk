---
layout: layouts/layout.njk
scripts:
  - js/home.js
  - js/components.js
---

<nav class="mainbar">
  <img class="mainbar-logo" src="{{ 'img/tarugo21-kickstarter.svg' | url }}">
</nav>

<div class="project-container">
  <div class="project">
    <header class="project-header">
      <h1>{{ header.title }}</h1>
      <p>{{ header.subtitle }}</p>
    </header>

    <figure class="project-video">
      <img src="{{ video.poster }}">
    </figure>

    <div class="project-actions">
      <progress class="progress" value="{{ eventbrite.metrics.tickets }}" max="500"></progress>

      <ul class="project-details">
        <li class="project-details-tickets">
          <strong>{{ eventbrite.metrics.tickets }} entradas vendidas</strong>
          de un mínimo de 500 para celebrar el evento
        </li>

        <li class="project-details-sponsors">
          <strong>{{ metrics.sponsors }} patrocinadores</strong>
        </li>

        <li class="project-details-days">
          <strong>{{ metrics.days }} días</strong>
          hasta el evento
        </li>
      </ul>

      <a href="#" class="button is-primary">Asiste a este evento</a>

      <p class="project-subactions">
        <a href="#" class="button is-secondary">Patrocínalo</a>
        <a href="#" class="button is-social is-twitter">
          <svg role="img" width="24" height="24" viewBox="0 0 24 24" xmlns="https://www.w3.org/2000/svg"><title>Twitter icon</title><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"></path></svg>
        </a>
        <a href="#" class="button is-social is-linkedin">
          <svg role="img" width="24" height="24" viewBox="0 0 24 24" xmlns="https://www.w3.org/2000/svg"><title>LinkedIn icon</title><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path></svg>
        </a>
      </p>
    </div>
  </div>
</div>

<div class="navbar-container">
  <nav class="navbar">
    <button class="navbar-menu-button">
      <svg viewbox="0 0 24 24" width="16">
        <path d="M7 3h21V0H7M7 12h12V9H7M7 21h21v-3H7"></path>
        <circle cx="1.5" cy="19.5" r="1.5"></circle>
        <circle cx="1.5" cy="10.5" r="1.5"></circle>
        <circle cx="1.5" cy="1.5" r="1.5"></circle>
      </svg>
      Menú
    </button>
    <ul class="navbar-menu">
      {% for item in menu %}
      <li><a href="{{ item.href }}">{{ item.text }}</a></li>
      {% endfor %}

      <li class="navbar-menu-cta"><a href="{{ '~/pledge.yml' | url }}" class="button is-primary">Asistir</a></li>
      <li class="navbar-menu-cta"><a href="#" class="button is-secondary">Patrocinar</a></li>
    </ul>

    <ul class="navbar-ctas">
      <li><a href="{{ '~/pledge.yml' | url }}" class="button is-primary">Asistir</a></li>
      <li><a href="#" class="button is-secondary">Patrocinar</a></li>
    </ul>
  </nav>
</div>

<div class="maincontent has-2cols">
  <section class="maincontent-aside">
    <header class="maincontent-aside-header">
      <img src="{{ '/img/logo-tarugo.png' | url }}" alt="Logo Tarugo" width="50">

      <h2>{{ aside.title }}</h2>
      {{ aside.intro | md | safe }}
    </header>

    <h3>{{ tickets.title }}</h3>

    {% include "home/tickets.njk" %}
  </section>

  <div class="maincontent-content">
    {% set content = home.what %}
    {% include "home/what.njk" %}

    {% set content = home.why %}
    {% include "home/why.njk" %}

    {% set content = home.calendar %}
    {% include "home/calendar.njk" %}

    {% set content = home.speakers %}
    {% include "home/speakers.njk" %}

    {% set content = home.partners %}
    {% include "home/partners.njk" %}

    {% set content = home.contact %}
    {% include "home/contact.njk" %}

    {% set content = footer %}
    {% include "home/footer.njk" %}
  </div>
</div>
